{
    "name": "motor-part-invoices",
    "version": "0.0.1",
    "license": "MIT",
    "main": "main/index.js",
    "productName": "Motor Parts - Invoices",
    "scripts": {
        "clean": "rimraf dist main renderer/out renderer/.next",
        "dev": "yarn run build-electron && electron .",
        "build-renderer": "next build renderer && next export renderer",
        "build-electron": "tsc -p electron-src",
        "build": "yarn run build-renderer && yarn run build-electron",
        "pack-app": "yarn run build && electron-builder --dir",
        "dist": "yarn run build && electron-builder",
        "type-check": "tsc",
        "test": "jest"
    },
    "dependencies": {
        "@date-io/dayjs": "1.x",
        "@material-ui/core": "^4.11.3",
        "@material-ui/icons": "^4.11.2",
        "@material-ui/pickers": "^3.3.10",
        "@prisma/client": "^2.18.0",
        "dayjs": "^1.10.4",
        "electron-is-dev": "^1.1.0",
        "electron-next": "^3.1.5",
        "query-string": "^7.0.0",
        "react": "^17.0.0",
        "react-dom": "^17.0.0",
        "react-spring": "^9.0.0",
        "typeface-roboto": "^1.1.13"
    },
    "devDependencies": {
        "@testing-library/dom": "^7.30.0",
        "@testing-library/jest-dom": "^5.11.9",
        "@testing-library/react": "^11.2.5",
        "@testing-library/react-hooks": "^5.1.0",
        "@types/jest": "^26.0.20",
        "@types/node": "^14.14.6",
        "@types/react": "^16.9.9",
        "@types/react-dom": "^16.9.9",
        "babel-jest": "^26.6.3",
        "electron": "^10.0.0",
        "electron-builder": "^22.9.1",
        "jest": "^26.6.3",
        "jest-dom": "^4.0.0",
        "next": "latest",
        "prettier": "^2.2.1",
        "prisma": "^2.16.1",
        "rimraf": "^3.0.0",
        "ts-jest": "^26.5.3",
        "typescript": "^4.0.5"
    },
    "build": {
        "asar": true,
        "files": [
            "main",
            "renderer/out"
        ]
    },
    "prettier": {
        "singleQuote": true,
        "trailingComma": "es5",
        "semi": true,
        "tabWidth": 4
    }
}
